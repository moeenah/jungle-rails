<section class="orders-show">

  <header class="page-header">
    <h4 class="order-email">Email: <%= @order.email %></h4>
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_total = 0 %>
      <% @list.each do |item| %>
        <%= render 'product', product: Product.find(item.product_id),quantity: item.quantity, individual_price: (item.item_price_cents / 100.0), total_price: (item.total_price_cents / 100.0)%>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          TOTAL:
        </th>
        <th>
          $<%= @order.total_cents / 100.0 %>
        </th>
      </tr>
    </tfoot>
  </table>

  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
